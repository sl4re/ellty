{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-rational-order"
  ],
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "selector-class-pattern": "(^([a-z][a-z0-9]*)(_[a-z0-9]+)*$|^([a-z][a-z0-9]*)(-[a-z0-9]+)*$)"
  }
}
